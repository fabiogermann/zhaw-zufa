\begin_layout Subsection*
Konvergenz, Divergenz
\end_layout

\begin_layout Itemize
Eine Folge heisst 
\series bold
konvergent
\series default
, falls sie 
\series bold
einen Grenzwert
\series default
 hat.
\end_layout

\begin_layout Itemize
Eine Folge heisst 
\series bold
divergent
\series default
, wenn sie 
\series bold
keinen Grenzwert
\series default
 hat.
\end_layout

\begin_layout Subsection*
Rechnen mit Grenzen
\end_layout

\begin_layout Standard
\begin_inset Formula $a_{n}$
\end_inset

und 
\begin_inset Formula $b_{n}$
\end_inset

seien konvergente Folgen mit 
\begin_inset Formula $\underset{n\rightarrow\infty}{lim\, a_{n}}=a$
\end_inset

 bzw.
 
\begin_inset Formula $\underset{n\rightarrow\infty}{lim\, b}=ab$
\end_inset

, dann gilt:
\end_layout

\begin_layout Standard
\begin_inset Tabular
<lyxtabular version="3" rows="4" columns="2">
<features tabularvalignment="middle">
<column alignment="center" valignment="top" width="0">
