\begin_layout Subsection*
Anwendung in der Finanzmathematik (GF)
\end_layout

\begin_layout Subsubsection*
Zinseszinsrechnung
\end_layout

\begin_layout Standard
\begin_inset Formula $K_{0}=$
\end_inset

Startkapital; 
\begin_inset Formula $p=$
\end_inset

Zinssatz (in %); 
\begin_inset Formula $n=$
\end_inset

Anzahl Jahre; 
\begin_inset Formula $K_{n}=$
\end_inset

Kapital nach 
\begin_inset Formula $n$
\end_inset

 Jahren;
\end_layout

\begin_layout Verse
\begin_inset Tabular
<lyxtabular version="3" rows="1" columns="1">
<features tabularvalignment="middle">
<column alignment="center" valignment="top" width="0pt">
<row>
<cell alignment="center" valignment="top" topline="true" bottomline="true" leftline="true" rightline="true" usebox="none">
\begin_inset Text

\begin_layout Plain Layout
\begin_inset Formula $K_{n}=K_{0}\cdot(1+\frac{p}{100})^{n}=K_{0}\cdot q^{n}$
\end_inset


\end_layout

\end_inset
</cell>
</row>
</lyxtabular>

\end_inset


\end_layout

\begin_layout Standard
Bemerkung: 
\begin_inset Formula $q=$
\end_inset

Zinsfaktor
\end_layout

\begin_layout Verse
\begin_inset Formula $q=1+\frac{p}{100}$
\end_inset

, also wenn z.B.
 
\noun on

\begin_inset Formula $p=6\%\rightarrow q=1.06$
\end_inset

 
\end_layout

\begin_layout Subsubsection*
Rentenrechnung
\end_layout

\begin_layout Standard
\begin_inset Formula $r=$
\end_inset

Rente; 
\begin_inset Formula $q=$
\end_inset

Zinsfaktor; 
\begin_inset Formula $n=$
\end_inset

Anzahl Jahre
\end_layout

\begin_layout Verse
\begin_inset Tabular
<lyxtabular version="3" rows="1" columns="1">
