\begin_body

\begin_layout Part*
Folgen und Reihen
\end_layout

\begin_layout Section*
Folgen
\end_layout

\begin_layout Standard
Eine reelle Zahlenfolge 
\begin_inset Formula $a_{1},a_{2},a_{3},...$
\end_inset

, die nach irgendeiner Vorschrift geordnet sind.
 Die Folge kann endlich viele Glieder haben (abbrechende Folge) oder unendlich
 viele Glieder umfassen.
\end_layout

\begin_layout Standard
Bsp: 
\begin_inset Formula $1,4,9,16...$
\end_inset


\end_layout

\begin_layout Subsection*
Summenzeichen
\end_layout

\begin_layout Standard
\begin_inset Formula $\overset{n}{\underset{k=m}{\sum}}a_{k}=a_{m}+a_{m+1}+a_{m+2}+...+a_{n}$
\end_inset

 = 
\begin_inset Quotes eld
\end_inset

Summe aller 
\begin_inset Formula $a_{k}$
\end_inset

 von 
\begin_inset Formula $k=m$
\end_inset

 bis 
\begin_inset Formula $k=n$
\end_inset


\begin_inset Quotes erd
\end_inset


\end_layout

\begin_layout Standard
Zu jeder Folge 
\begin_inset Formula $a_{1},a_{2},a_{3},...$
\end_inset

 kann man die Folge 
\begin_inset Formula $s_{n}$
\end_inset

der Teilsummen, die sogenante Reihe der Folge bilden:
\end_layout

\begin_layout Itemize
\begin_inset Formula $s_{1}=a_{1}$
\end_inset

 
\end_layout

\begin_layout Itemize
\begin_inset Formula $s_{2}=a_{1}+a_{2}$
\end_inset

 
\end_layout

\begin_layout Itemize
\begin_inset Formula $s_{3}=a_{1}+a_{2}+a_{3}$
\end_inset

 
\end_layout

\begin_layout Itemize
\begin_inset Formula $s_{n}=a_{1}+a_{2}+a_{3}+...+a_{n}=\overset{n}{\underset{k=1}{\sum}}a_{k}$
\end_inset

 
\end_layout

\begin_layout Subsection*
Produktzeichen
\end_layout

\begin_layout Standard
\begin_inset Formula $\overset{n}{\underset{k=m}{\prod}}a_{k}=a_{m}\cdot a_{m+1}\cdot a_{m+2}\cdot...\cdot a_{n}$
\end_inset

 = 
\begin_inset Quotes eld
\end_inset

Produkt aller 
\begin_inset Formula $a_{k}$
\end_inset

 von 
\begin_inset Formula $k=m$
\end_inset

 bis 
\begin_inset Formula $k=n$
\end_inset


\begin_inset Quotes erd
\end_inset


\end_layout

